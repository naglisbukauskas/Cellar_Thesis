<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recommendations.RecommendationsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/rec_heading_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recommendation_recycler_view_1"
            android:textSize="18sp"
            android:text="Heading One"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendation_recycler_view_1"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/rec_heading_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/test_item"/>

        <TextView
            android:id="@+id/rec_heading_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recommendation_recycler_view_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recommendation_recycler_view_2"
            android:textSize="18sp"
            android:text="Heading One"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendation_recycler_view_2"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/rec_heading_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/test_item"/>

        <TextView
            android:id="@+id/rec_heading_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recommendation_recycler_view_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recommendation_recycler_view_3"
            android:textSize="18sp"
            android:text="Heading One"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendation_recycler_view_3"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/rec_heading_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/test_item"/>

        <TextView
            android:id="@+id/rec_heading_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recommendation_recycler_view_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recommendation_recycler_view_4"
            android:textSize="18sp"
            android:text="Heading One"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendation_recycler_view_4"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/rec_heading_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/test_item"/>

        <TextView
            android:id="@+id/rec_heading_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recommendation_recycler_view_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recommendation_recycler_view_5"
            android:textSize="18sp"
            android:text="Heading One"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendation_recycler_view_5"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/rec_heading_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/test_item"/>

        <TextView
            android:id="@+id/rec_heading_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recommendation_recycler_view_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recommendation_recycler_view_6"
            android:textSize="18sp"
            android:text="Heading One"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendation_recycler_view_6"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/rec_heading_6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/test_item"/>

        <Button
            android:id="@+id/recommendationGenerateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate"
            app:layout_constraintTop_toBottomOf="@id/recommendation_recycler_view_6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>