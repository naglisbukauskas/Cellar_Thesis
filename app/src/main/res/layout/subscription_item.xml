<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/CYellow"
    app:cardCornerRadius="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@color/CYellow">


        <TextView
            android:id="@+id/subscription_item_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/subscription_item_service_start_date"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/subscription_item_service_name"
            app:layout_constraintBottom_toTopOf="@id/subscription_item_service_name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="Service"/>

        <TextView
            android:id="@+id/subscription_item_service_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/subscription_item_service_name"
            app:layout_constraintEnd_toStartOf="@id/subscription_item_service_end_date"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/subscription_item_service_start_date"
            app:layout_constraintBottom_toTopOf="@id/subscription_item_service_start_date"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="Started"/>

        <TextView
            android:id="@+id/subscription_item_service_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/subscription_item_service_start_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/subscription_item_service_end_date"
            app:layout_constraintBottom_toTopOf="@id/subscription_item_service_end_date"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="Ending"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>