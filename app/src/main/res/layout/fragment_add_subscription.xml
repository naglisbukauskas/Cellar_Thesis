<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/sub_service_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sub_service_name_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Service Name"
        android:textSize="24sp"
        android:textColor="@color/CYellow" />

    <EditText
        android:id="@+id/sub_service_name_edit_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sub_service_name_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sub_service_start_date_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="test"/>

    <TextView
        android:id="@+id/sub_service_start_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sub_service_name_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sub_service_start_date_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Subscription Start"
        android:textSize="24sp"
        android:textColor="@color/CYellow" />

    <EditText
        android:id="@+id/sub_service_start_date_edit_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sub_service_start_date_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sub_service_end_date_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="test"/>

    <TextView
        android:id="@+id/sub_service_end_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sub_service_start_date_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sub_service_end_date_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Subscription End"
        android:textSize="24sp"
        android:textColor="@color/CYellow" />

    <EditText
        android:id="@+id/sub_service_end_date_edit_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sub_service_end_date_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="test"/>

    <Button
        android:id="@+id/add_subscription_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="Add"/>

</androidx.constraintlayout.widget.ConstraintLayout>